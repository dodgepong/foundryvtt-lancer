<form>
  <div class="card">
    <span class="lancer-header major">Rest</span>
    <span class="lancer-header submajor loadout-category">REPAIR CAPACITY REMAINING: {{currentRepairs}} / {{repairCap}}</span>
    <div class="flexcol">
      <div class="card">
        <div class="lancer-header submajor clipped-top">
          <i class="mdi mdi-heart-outline i--m header-icon"></i>
          <span>HULL INTEGRITY</span>
        </div>
        <div class="flexrow">
          {{#if (isDestroyed)}}
            <span>&nbsp;&gt; CRITICAL: MECH DESTROYED</span>
            {{!-- {{{std-checkbox "" label="Repair Mech?"  input_classes="repair-destroyed-mech" value=false}}} --}}

          {{else if (lt currentHP maxHP)}}
          <span>&nbsp;&gt; HULL DAMAGED: [ {{currentHP}} / {{maxHP}} ]</span>
            {{!-- {{{std-checkbox "" label="Restore Full HP"  input_classes="restore-hp" value=false}}} --}}
          {{else}}
          <span>&nbsp;&gt; NO HULL DAMAGE DETECTED</span>
          {{/if}}
        </div>
      </div>

      <div class="flexcol">
        <div class="wraprow double">
          <div class="card">
            <div class="lancer-header submajor clipped-top">
              <i class="cci cci-structure i--m header-icon"></i>
              <span>STRUCTURAL INTEGRITY</span>
            </div>
            <div class="flexrow">
              {{#if (lt currentStructure maxStructure)}}
              <span>&nbsp;&gt; STRUCTURE COMPROMISED: [ {{currentStructure}} / {{maxStructure}} ]</span>
              {{else}}
              <span>&nbsp;&gt; NO STRUCTURAL DAMAGE DETECTED</span>
              {{/if}}
            </div>
          </div>

          <div class="card">
            <div class="lancer-header submajor clipped-top">
              <i class="cci cci-reactor i--m header-icon"></i>
              <span>REACTOR INTEGRITY</span>
            </div>
            <div class="flexrow">
              {{#if (lt currentStress maxStress)}}
              <span>&nbsp;&gt; REACTOR COMPROMISED: [ {{currentStress}} / {{maxStress}} ]</span>
              {{else}}
              <span>&nbsp;&gt; NO REACTOR DAMAGE DETECTED</span>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      <div class="card mech_weapon">
        <div class="lancer-header submajor clipped-top">
          <i class="cci cci-weapon i--m header-icon"></i>
          <span>WEAPONS</span>
        </div>
        <div class="flexcol">
            {{#if (gt destroyedWeapons.length 0)}}
              <div class="flexrow"><span>&nbsp;&gt; WEAPON DAMAGE DETECTED</span></div>
              <div class="wraprow double">
              {{#each destroyedWeapons as |weapon index|}}
                <div class="card">
                  <div class="lancer-header destroyed"><span>{{weapon.label}}</span></div>
                  <div class="flexrow">Repair?</div>
                </div>
              {{/each}}
              </div>
            {{else}}
            <span>&nbsp;&gt; ALL WEAPONS OPERATIONAL</span>
            {{/if}}
        </div>
      </div>

      <div class="card mech-system">
        <div class="lancer-header submajor clipped-top">
          <i class="cci cci-system i--m header-icon"></i>
          <span>SYSTEMS</span>
        </div>
        <div class="flexcol">
            {{#if (gt destroyedSystems.length 0)}}
            <div class="flexcol"><span>&nbsp;&gt; SYSTEM DAMAGE DETECTED</span></div>
              <div class="wraprow double">
              {{#each destroyedSystems as |system index|}}
                <div class="card">
                  <div class="lancer-header destroyed"><span>{{system.label}}</span></div>
                  <div class="flexrow">Repair?</div>
                </div>
              {{/each}}
              </div>
            {{else}}
            <span>&nbsp;&gt; ALL SYSTEMS OPERATIONAL</span>
            {{/if}}
        </div>
      </div>

    </div>



  </div>

  {{!--


  {{#if (gt destroyedWeapons.length 0)}}
  <p>Destroyed Weapons
    {{#each destroyedWeapons as |weapon index|}}
      <div><input type="checkbox" name class=""><label</input></div>
    {{/each}}
  </p>
  {{else}}
  <p>[All Weapons Operational]</p>
  {{/if}}

  {{#if (gt destroyedSystems.length 0)}}
  <p>Destroyed Systems
    {{#each destroyedSystems as |system index|}}
      <div>{{{std-checkbox system.id label=(concat "Repair " system.label)  input_classes="system-repair" value=false}}}</div>
    {{/each}}
  </p>
  {{else}}
  <p>[All Systems Operational]</p>
  {{/if}}

  {{#if (lt currentStructure  maxStructure)}}
  <p>repair structure</p>
  {{else}}
  <p>[Structural Integrity At Maximum]</p>
  {{/if}}

  {{#if (lt currentStress  maxStress)}}
  <p>repair stress</p>
  {{else}}
  <p>[Stress Integrity At Maximum]</p>
  {{/if}}
   --}}

